<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">
    <ScrollView>
        <VerticalStackLayout BackgroundColor="#F6FFF0">

            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="0.08*,0.15*, 0.15*, 0.15*, 0.35*, 0.1*" Padding="10" >
                <Button Text="Show Info" Command ="{Binding ShowClickedCommand}" Grid.Row="0" Grid.Column="0" Margin="5" BackgroundColor="#B0EB8A" TextColor="ForestGreen" FontAttributes="Bold"/>
                <Button Text="Select XML File" Command="{Binding LoadXmlFileCommand}" Grid.Row="0" Grid.Column="1" Margin="5" BackgroundColor="#B0EB8A" TextColor="ForestGreen" FontAttributes="Bold"/>
                <Button Text="Select XSL File" Command="{Binding LoadXslFileCommand}" Grid.Row="0" Grid.Column="2" Margin="5" BackgroundColor="#B0EB8A" TextColor="ForestGreen" FontAttributes="Bold"/>
                <Button Text="Transfrom to HTML" Command="{Binding ToHTMLCommand}" Grid.Row="0" Grid.Column="3" Margin="5" BackgroundColor="#B0EB8A" TextColor="ForestGreen" FontAttributes="Bold" />
                <Button Text="Exit" Command="{Binding ExitCommand}" Grid.Row="0" Grid.Column="5" Margin="5" BackgroundColor="#B0EB8A" TextColor="ForestGreen" FontAttributes="Bold" />
                <Picker Title="Select File Analysis Type" Grid.Row="0" Grid.Column="4" Margin="5" Background="#E8FAD9" TitleColor="ForestGreen" FontAttributes="Bold" ItemsSource="{Binding Types}" SelectedItem = "{Binding SelectedType}"/>
            </Grid>

            <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*,0.8*" Padding="10">
                <VerticalStackLayout>
                    <Picker Title="{Binding PickerAttributeText}" ItemsSource="{Binding AttributeValues1}" SelectedItem="{Binding SelectedValue1, Mode=TwoWay}" SelectedIndex="{Binding PickerIndex1, Mode=TwoWay}" Grid.Row="0" Grid.Column="0" Margin="5" BackgroundColor="#E8FAD9" TitleColor="ForestGreen"/>
                    <Picker Title="{Binding PickerAttributeText}" ItemsSource="{Binding AttributeValues2}" SelectedItem="{Binding SelectedValue2, Mode=TwoWay}" SelectedIndex="{Binding PickerIndex2, Mode=TwoWay}" Grid.Row="1" Grid.Column="0" Margin="5" BackgroundColor="#E8FAD9" TitleColor="ForestGreen"/>
                    <Picker Title="{Binding PickerAttributeText}" ItemsSource="{Binding AttributeValues3}" SelectedItem="{Binding SelectedValue3, Mode=TwoWay}" SelectedIndex="{Binding PickerIndex3, Mode=TwoWay}" Grid.Row="2" Grid.Column="0" Margin="5" BackgroundColor="#E8FAD9" TitleColor="ForestGreen"/>
                    <Picker Title="{Binding PickerAttributeText}" ItemsSource="{Binding AttributeValues4}" SelectedItem="{Binding SelectedValue4, Mode=TwoWay}" SelectedIndex="{Binding PickerIndex4, Mode=TwoWay}" Grid.Row="3" Grid.Column="0" Margin="5" BackgroundColor="#E8FAD9" TitleColor="ForestGreen"/>
                    <Picker Title="{Binding PickerAttributeText}" ItemsSource="{Binding AttributeValues5}" SelectedItem="{Binding SelectedValue5, Mode=TwoWay}" SelectedIndex="{Binding PickerIndex5, Mode=TwoWay}" Grid.Row="4" Grid.Column="0" Margin="5" BackgroundColor="#E8FAD9" TitleColor="ForestGreen"/>
                </VerticalStackLayout>
                <Label Text="{Binding TextToView}" Grid.Row="0" Grid.Column="1" BackgroundColor="#E8FAD9" Margin="10" Padding="5"/>
            </Grid>

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto, Auto" Padding="10">
                <Button Text="Clear" Command="{Binding ClearCommand}" Grid.Column="1" Margin="5" BackgroundColor="#B0EB8A" TextColor="ForestGreen" FontAttributes="Bold"/>
                <Button Text="Search" Command="{Binding SearchCommand}" Grid.Row="0" Grid.Column="0" Margin="5" BackgroundColor="#B0EB8A" TextColor="ForestGreen" FontAttributes="Bold"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
